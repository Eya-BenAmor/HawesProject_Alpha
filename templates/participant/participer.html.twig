{% block index %}


 <section class="home py-5 d-flex align-items-center" id="header">
        <div class="container text-light py-5"  data-aos="fade-right"> 
            <h1 class="headline">Les meilleures <span class="home_text">Randonnées</span><br>Pour vous</h1>
            <p class="para para-light py-3">Hawes vise à encadrer les amoureux de la nature, leurs faire découvrir la beauté de notre pays, tout en préservant ces richesses bien fragiles et surtout apporter un plus aux communautés locales.</p>
           
        </div> <!-- end of container -->
    </section> <!-- end of home -->
   <section class="plans d-flex align-items-center py-5" id="participer">
        <div class="container-fluid text-light">
            <div class="row">
                <div class="col-lg-6 d-flex justify-content-center justify-content-lg-end align-items-center px-lg-5" data-aos="fade-right">
                    <div style="width:90%">
                        <div class="text-center text-lg-start py-4 pt-lg-0">
                         <h2 class="py-2">Merci de valider votre participation</h2>
                           
                           
                        </div>
                        <div>
                            
                                <div class="col-lg-6">
                                {{ form_start(formA,{'attr': {'novalidate': 'novalidate'}} ) }}
                                
                                    <div class="form-group py-2">
                                   <tr>
                                       <td>{{form_label(formA.age,"Votre age*")}}</td>
		                          <td>{{form_widget(formA.age)}}</td>
                                  <div class="text-danger">
                              <td>{{form_errors(formA.age)}}</td>
                               </div>  
                              </tr> 
                                    </div>   
                                                               
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group py-2">
                                    <tr>
                                        <td>{{form_label(formA.age,"Votre téléphone*")}}</td>
		                          <td>{{form_widget(formA.tel)}}</td>
                                  <div class="text-danger">
                              <td>{{form_errors(formA.tel)}}</td>  
                              </div>  
                               </tr>   
                                    </div>                                 
                                </div>
                            
                            <div class="form-group py-1">
                            <tr>
                                <td>{{form_label(formA.age,"Souffrez-vous de maladies chroniques ou d'allergie*")}}</td>
		                          <td>{{form_widget(formA.maladie)}}</td>
                                  <div class="text-danger">
                              <td>{{form_errors(formA.maladie)}}</td>  </div>  
                              </tr> 
                            </div>  
                            <div class="form-group py-2">
                            <tr>
                                <td>{{form_label(formA.age,"Je suis un randonneur*")}}</td>
		                          <td>{{form_widget(formA.classe)}}</td>
                                  <div class="text-danger">
                              <td> {{form_errors(formA.classe)}}</td> </div>  
                              </tr> 
                            </div>  
                           {{ form_row(formA.captchaCode) }}                     
                        </div>
                       <div class="btn form-control-submit-button">
                          	<button type="submit">Ajouter</button>
                         </div> 
                     
                         {{form_end(formA)}} 
                    </div> <!-- end of div -->
               
                </div> <!-- end of col -->
             <div class="col-lg-6 d-flex align-items-center" data-aos="fade-down">
             
              <div class=grayscale div img>
                 <div >

                   <img class="img-fluid" src="../front/assets/images/contact.jpg" alt="contact">      
                     </div>
                 </div>
                   
                </div> <!-- end of col -->
            </div> <!-- end of row -->
        </div> <!-- end of container -->
    </section> <!-- end of contact -->






  <!-- Location -->
    <section class="location text-light py-5">
        <div class="container" data-aos="zoom-in">
            <div class="row">
                <div class="col-lg-3 d-flex align-items-center">
                    <div class="p-2"><i class="far fa-map fa-3x"></i></div>
                    <div class="ms-2">
                        <h6>Adresse</h6>
                        <p>El Ghazela Ariana</p>
                    </div>
                </div>
                <div class="col-lg-3 d-flex align-items-center" >
                    <div class="p-2"><i class="fas fa-mobile-alt fa-3x"></i></div>
                    <div class="ms-2">
                        <h6>Téléphone</h6>
                        <p>(800) 265  216 2020</p>
                    </div>
                </div>
                <div class="col-lg-3 d-flex align-items-center" >
                    <div class="p-2"><i class="far fa-envelope fa-3x"></i></div>
                    <div class="ms-2">
                        <h6>Mail</h6>
                        <p>hawes@gmail.com</p>
                    </div>
                </div>
                <div class="col-lg-3 d-flex align-items-center" >
                    <div class="p-2"><i class="far fa-clock fa-3x"></i></div>
                    <div class="ms-2">
                        <h6>Disponibilité</h6>
                        <p>09:00 AM - 20:00 PM</p>
                    </div>
                </div>
            </div> <!-- end of row -->
        </div> <!-- end of container -->
    </section> <!-- end of location -->




{% endblock  %}
{% block footer  %}
    <!-- Bottom -->
    <div class="bottom py-2 text-light" >
        <div class="container d-flex justify-content-between">
            <div>
                <p>Equipe Alpha 2022</p><br>
               
            </div>
           
        </div> <!-- end of container -->
    </div> <!-- end of bottom -->
     <!-- Back To Top Button -->
    <button onclick="topFunction()" id="myBtn">
        <img src="../front/assets/images/up-arrow.png" alt="alternative">
    </button>
